public class ChallengeOne 
{ 
  
/** @return the number of words found in a string */  
static int countWords(String inputstr)  
{  
    int cal = 1;  
  
    for (int a = 1; a < inputstr.length() - 1; a++) {  
        if (inputstr.charAt(a)>=65&&inputstr.charAt(a)<=90)  
            cal++;  
    }  
  
    return cal;  
}  
  
public static void main(String args[])  
{  
    String inputstr = "thisContainsFourWords";  
  
    System.out.print( countWords(inputstr));  
  
}  
}
